{
  "compilerOptions": {
    "target": "es5",                       
    "module": "esnext", 
    "moduleResolution": "node",   
    "strict": true,
    "noImplicitAny": true,              
    "strictNullChecks": true,           
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [ "src/**/*.ts" ]
}
